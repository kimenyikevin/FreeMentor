      "/sessions": {
        "post": {
          "tags": [
            "Create Mentorship session"
          ],
          "summary": "Create mentorship session",
          "description": "",
          "operationId": "create sessions",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The token to provide in this box must start with adminToken then space"
             },
            {
              "in": "body",
              "name": "body",
              "description": "Created session object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/sessions"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "sessions created successfully",
              "schema":{
                "type":"object",
                "example": {
                  "status": 200,
                  "data": {
                      "Sessionid": 5,
                      "mentorId": 1,
                      "menteeId": 5,
                      "questions": "i need help",
                      "status": "pending"
                  }
                }
              }
            }
          }
        }
      },
      "/sessions/{id}/accept": {
        "patch": {
          "tags": [
            "Accept Mentorship session"
          ],
          "summary": "reject mentorship request",
          "description": "",
          "operationId": "acceptRequest",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The token to provide in this box must start with adminToken then space"
             },
            {
              "in": "path",
              "name": "id",
              "description": "acccept mentorship request",
              "required": true
            }
          ],
          "responses": {
            "201": {
              "description": "accepted mentorship successfully",
              "schema":{
                "example":{
                  "status": 200,
                  "data": {
                      "Sessionid": 2,
                      "mentorId": 3,
                      "menteeId": 1,
                      "questions": "i need help",
                      "menteeEmail": "kimenyikevin@gmail.com",
                      "status": "accepted"
                  }
                }
              }
            },
            "404":{
              "description": "data not found"
            }
          }
        }
      },
      "/sessions/{id}/reject": {
        "patch": {
          "tags": [
            "Reject Mentorship session"
          ],
          "summary": "reject mentorship request",
          "description": "",
          "operationId": "rejectRequest",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The token to provide in this box must start with adminToken then space"
             },
            {
              "in": "path",
              "name": "id",
              "description": "acccept mentorship request",
              "required": true
            }
          ],
          "responses": {
            "201": {
              "description": "rejected mentorship successfully",
              "schema":{
                "example":{
                  "status": 200,
                  "data": {
                      "Sessionid": 2,
                      "mentorId": 3,
                      "menteeId": 1,
                      "questions": "i need help",
                      "menteeEmail": "kimenyikevin@gmail.com",
                      "status": "reject"
                  }
                }
              }
            },
            "404":{
              "description": "data not found"
            }
          }
        }
      }
