              "schema": {
                "type": "object",
                "example": {
                  "id": 4,
                  "firstName": "bavakure",
                  "lastName": "eric",
                  "email": "kimenyike@gmail.com",
                  "password": "kigali",
                  "address": "kigali",
                  "bio": "engineer",
                  "status": "mentor",
                  "occupation": "engineer",
                  "expertise": "engineer"
                }
              }
            },
            "401":{
              "description": "you are not user"
            }
          }
        }
      },
      "/mentors{id}": {
        "get": {
          "tags": [
            "Specific mentor"
          ],
          "summary": "Returns one mentor",
          "description": " ",
          "operationId": "getmentor",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the mentor",
              "required": true,
              "type": "integer",
              "format": "int64"
            },
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The token to provide in this box must start with adminToken then space"
             }
          ],
          "responses": {
            "200": {
              "description": "specific mentor",
              "schema": {
                "type": "object",
                "example": {
                  "id": 4,
                  "firstName": "bavakure",
                  "lastName": "eric",
                  "email": "kimenyike@gmail.com",
                  "password": "kigali",
                  "address": "kigali",
                  "bio": "engineer",
                  "status": "mentor",
                  "occupation": "engineer",
                  "expertise": "engineer"
                }
