    {
      "name": "user",
      "description": "New user registration"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Create New user",
        "description": "If you don't have account yet register",
        "operationId": "createUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully"
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "user sign in",
        "description": "",
        "operationId": "loginUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user successful login",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/user/{id}": {
        "patch": {
          "tags": [
            "user"
          ],
          "summary": "change user to mentor",
          "description": " ",
          "operationId": "getPetById",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the user",
              "required": true,
              "type": "integer",
              "format": "int64"
            },
            {
              "name": "authorization",
              "in": "header",
              "type": "string",
              "description": "The value to provide in the  header of API request"
             }
          ],
          "responses": {
            "200": {
              "description": "successful operation"
            },
            "400": {
              "description": "Invalid ID supplied"
            },
            "404": {
              "description": "Pet not found"
            }
          }
        }
      },
      "/mentors": {
        "get": {
          "tags": [
            "user"
          ],
          "summary": "Returns all mentors",
          "description": "",
          "operationId": "get all mentors",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "type": "string",
              "description": "The value to provide in the  header of API request"
             }
          ],
          "responses": {
            "200": {
              "description": "List of all mentor",
              "schema": {
                "type": "object"
              }
            }
          }
        }
      },
      "/mentors{id}": {
        "get": {
          "tags": [
            "user"
          ],
          "summary": "Returns one mentor",
          "description": " ",
          "operationId": "getmentor",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID of the mentor",
              "required": true,
              "type": "integer",
              "format": "int64"
            },
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The value to provide in the  header of API request"
             }
          ],
          "responses": {
            "200": {
              "description": "List of all mentor",
              "schema": {
                "type": "object"
              }
            }
          }
        }
      },
      "/sessions": {
        "post": {
          "tags": [
            "user"
          ],
          "summary": "Create mentorship session",
          "description": "",
          "operationId": "create sessions",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The value to provide in the  header of API request"
             },
            {
              "in": "body",
              "name": "body",
              "description": "Created session object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/sessions"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "sessions created successfully"
            }
          }
        }
      },
      "/sessions/{id}/accept": {
        "patch": {
          "tags": [
            "user"
          ],
          "summary": "reject mentorship request",
          "description": "",
          "operationId": "acceptRequest",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The value to provide in the  header of API request"
             },
            {
              "in": "path",
              "name": "id",
              "description": "acccept mentorship request",
              "required": true
            }
          ],
          "responses": {
            "201": {
              "description": "accepted mentorship successfully"
            },
            "404":{
              "description": "data not found"
            }
          }
        }
      },
      "/sessions/{id}/reject": {
        "patch": {
          "tags": [
            "user"
          ],
          "summary": "reject mentorship request",
          "description": "",
          "operationId": "rejectRequest",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "authorization",
              "in": "header",
              "required": true,
              "type": "string",
              "description": "The value to provide in the  header of API request"
             },
            {
              "in": "path",
              "name": "id",
              "description": "acccept mentorship request",
              "required": true
            }
          ],
          "responses": {
            "201": {
              "description": "accepted mentorship successfully"
            },
            "404":{
              "description": "data not found"
            }
          }
        }
      }
